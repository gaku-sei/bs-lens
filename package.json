{
  "name": "bs-lens",
  "version": "0.1.0",
  "description": "Bring functional lenses to BuckleScript",
  "license": "MIT",
  "esy": {
    "build": [
      "dune build -p lens"
    ]
  },
  "scripts": {
    "test": "dune runtest",
    "format": "find lens/src lens/tests lens_ppx_deriving/src lens_ppx_deriving/tests -name '*.ml*' -exec bash -c 'ocamlformat -i \"$0\"' {} ;"
  },
  "dependencies": {
    "@opam/dune": "1.6.3",
    "@opam/lambda-term": "1.13",
    "@opam/lwt": "^4.0.0",
    "@opam/ppx_deriving": "4.2.1",
    "@opam/ppx_tools": "5.1+4.06.0",
    "@opam/ppxfind": "1.2",
    "ocaml": "~4.6.0"
  },
  "devDependencies": {
    "@opam/merlin": "^3.0.3",
    "@opam/ocamlformat": "0.8",
    "@opam/ounit": "2.0.8",
    "ocaml": "~4.6.0"
  }
}
